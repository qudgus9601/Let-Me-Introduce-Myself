{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "./bin",
    "strict": true,
    "allowJs": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "./bin"],
  "include": ["*"]
}
